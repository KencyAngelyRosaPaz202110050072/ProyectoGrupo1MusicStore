<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_login">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="417dp"
            android:layout_height="742dp"
            android:background="@drawable/FondoLogin">

            <View
                android:layout_width="340dp"
                android:layout_height="590dp"
                android:background="@drawable/SubFondoInicioSesion"
                android:layout_gravity="center">
            </View>


            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="157dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="250dp"
                android:orientation="vertical">

                <!---Nombre de Usuario-->
                <TextView
                    android:id="@+id/txtviewLoginUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textviewLoginUsuario"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/txtLoginUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white">

                </EditText>

                <!---Password-->
                <TextView
                    android:id="@+id/txtviewLoginPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textviewLoginPassword"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="22dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:inputType="text|textPassword">
                </EditText>


            </LinearLayout>

            <!---Área de checkbox y enlace-->
            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="47dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="430dp"
                android:orientation="horizontal"
                android:paddingLeft="-10dp">

                <!---Checkbox-->
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textColor="#FFFDFD"
                    android:textColorHighlight="#FFFFFF"
                    android:textColorLink="#FFFCFC"
                    android:textSize="15sp"
                    tools:text="@string/checkLoginRecordar">
                </CheckBox>

                <!---¿Olvido su contraseña?-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/txtviewOlvidaPassword"
                    android:textSize="15sp"
                    android:textColor="#FFFDFD"
                    android:paddingLeft="20dp">

                </TextView>

            </LinearLayout>

            <!---Área de datos bimetricos-->
            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="47dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="500dp"
                android:orientation="vertical"
                android:background="@color/black">
            </LinearLayout>

            <!---Área de botones-->
            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="47dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="580dp"
                android:orientation="vertical"
                android:background="@color/black">
            </LinearLayout>



        </FrameLayout>


    </LinearLayout>

</ScrollView>