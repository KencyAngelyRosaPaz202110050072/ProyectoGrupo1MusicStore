<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_registrarse">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="417dp"
            android:layout_height="742dp"
            android:background="@drawable/fondologin">

            <View
                android:layout_width="340dp"
                android:layout_height="590dp"
                android:layout_gravity="center"
                android:background="@drawable/subfondoregistrate"></View>

            <LinearLayout
                android:layout_width="284dp"
                android:layout_height="340dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="235dp"
                android:orientation="vertical">

                <!---Primer Nombre-->
                <TextView
                    android:id="@+id/txtviewRegistrarsePrimerNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtviewRegistrarsePrimerNombre"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtRegistrarsePrimerNombre"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white">

                </EditText>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</ScrollView>